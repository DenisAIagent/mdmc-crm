# MDMC Music Ads CRM - Configuration Frontend

# API Configuration
VITE_API_URL=http://localhost:5000
VITE_APP_NAME="MDMC Music Ads CRM"
VITE_APP_VERSION=1.0.0

# Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

# Environment
VITE_NODE_ENV=development

# Analytics (Optional)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Feature Flags
VITE_ENABLE_GOOGLE_AUTH=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=true

# Security
VITE_ENABLE_CSRF_PROTECTION=true
VITE_SESSION_TIMEOUT=3600000

# Performance
VITE_ENABLE_SERVICE_WORKER=false
VITE_ENABLE_PWA=false

# MDMC Branding
VITE_BRAND_COLOR=#e50914
VITE_COMPANY_NAME="MDMC Music Ads"
VITE_SUPPORT_EMAIL=support@mdmc.fr

# Demo Mode (Development only)
VITE_DEMO_MODE=true
VITE_DEMO_EMAIL=denis@mdmc.fr
VITE_DEMO_PASSWORD=password123

# Monitoring
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_HOTJAR_ID=your-hotjar-id

# Social Login URLs (Production)
VITE_GOOGLE_OAUTH_REDIRECT=http://localhost:3000/login