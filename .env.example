# Configuration MDMC Music Ads CRM
NODE_ENV=production
PORT=5001
BASE_URL=https://your-domain.com

# MongoDB Database (Railway)
MONGODB_URI=mongodb://your_user:your_password@your_host:27017/your_database
DB_NAME=mdmc_crm

# JWT Security (Generate with OpenSSL)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_REFRESH_EXPIRE=7d

# AES-256 Encryption for sensitive data (Generate with OpenSSL)
ENCRYPTION_KEY=your_encryption_key_here
ENCRYPTION_IV=your_encryption_iv_here

# Session Security
SESSION_SECRET=your_session_secret_here

# Email Configuration (Mailgun preferred)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_FROM=Your App <noreply@yourdomain.com>

# SMTP Configuration (Fallback)
SMTP_HOST=smtp.brevo.com
SMTP_PORT=587
SMTP_USER=your_brevo_smtp_user
SMTP_PASSWORD=your_brevo_smtp_password
SMTP_FROM=noreply@yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# API Keys External Integrations
BREVO_API_KEY=your_brevo_api_key

# External Integrations
GOOGLE_ADS_CLIENT_ID=your_google_ads_client_id
GOOGLE_ADS_CLIENT_SECRET=your_google_ads_client_secret
GOOGLE_ADS_REFRESH_TOKEN=your_google_ads_refresh_token

META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_ACCESS_TOKEN=your_meta_access_token

TIKTOK_APP_ID=your_tiktok_app_id
TIKTOK_SECRET=your_tiktok_secret
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token

# Google Analytics 4
GA4_MEASUREMENT_ID=G-XXXXXXXXXX
GA4_API_SECRET=your_ga4_api_secret

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=mdmc-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-west-3

# Monitoring
SENTRY_DSN=your_sentry_dsn_for_error_tracking